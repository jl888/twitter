<div class='section'>
  <div class='container'>
    <div class='columns is-centered'>
      <div class='column is-half'>
        <h1 class="title">Your Tweet:</h1>
        <p>
          <%= @tweet.tweet %>
        </p>
      </div>
    </div>
  </div>
</div>

<nav class="navbar is-fixed-bottom">
  <div class="navbar-menu">
    <div class="navbar-item">
      <div class="field is-grouped">
        <p class="control">
          <%= link_to 'Edit', edit_tweet_path(@tweet), class: "button is-dark" %>
          <%= link_to 'Back', tweets_path, class: "button is-dark" %>
        </p>
      </div>
    </div>
  </div>
</nav>
